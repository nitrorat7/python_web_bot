#step 1 dostaje pierwszy link cd -> potem otworzymy go w selenium
URL = 'http://www.google.com/search?q=x-kom+msi+rtx+3080+x+gaming+trio'
page = requests.get(URL)
soup = BeautifulSoup(page.text, "html.parser")
linklist = []
eureka = None
for tag in soup.findAll('a',href=True):
    link = tag['href']
    print('URL: ',link)
    print(type(link))
    if re.search(r'/url*',link):
        print('eureka')
        eureka = link
        break

print(eureka) #link do produktu juz na stronie sklepu
